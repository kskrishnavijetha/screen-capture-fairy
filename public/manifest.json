{
  "manifest_version": 3,
  "name": "Screen Capture Fairy",
  "version": "1.0",
  "description": "A simple screen recording Chrome extension",
  "permissions": [
    "desktopCapture",
    "storage",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}