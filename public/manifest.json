{
  "manifest_version": 3,
  "name": "Screen Recorder",
  "version": "1.0",
  "description": "A simple screen recording extension.",
  "permissions": [
    "tabCapture",
    "storage",
    "desktopCapture",
    "downloads",
    "alarms"
  ],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}